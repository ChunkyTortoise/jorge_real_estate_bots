# Jorge's Real Estate AI Bots - Environment Configuration

# ========== CRITICAL API KEYS (GET THESE FIRST) ==========

# Anthropic Claude AI (REQUIRED - https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GoHighLevel CRM (REQUIRED - Settings → Integrations → API)
GHL_API_KEY=your_ghl_api_key_here
GHL_LOCATION_ID=your_ghl_location_id_here

# Zillow API for Property Data (REQUIRED for Seller Bot)
ZILLOW_API_KEY=your_zillow_api_key_here

# Twilio for SMS (REQUIRED for Lead Bot)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# SendGrid for Email (REQUIRED for automated responses)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ========== DATABASE CONFIGURATION ==========

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jorge_bots

# Redis Cache (REQUIRED for <500ms performance)
REDIS_URL=redis://localhost:6379/0

# ========== CLAUDE AI CONFIGURATION ==========

# Model Selection (Intelligent Routing)
CLAUDE_MODEL=claude-3-5-sonnet-20241022  # Default model
CLAUDE_HAIKU_MODEL=claude-3-haiku-20240307  # For routine tasks
CLAUDE_SONNET_MODEL=claude-3-5-sonnet-20241022  # For complex analysis
CLAUDE_OPUS_MODEL=claude-3-opus-20240229  # For high-stakes negotiations

# Default LLM Provider
DEFAULT_LLM_PROVIDER=claude

# ========== PERFORMANCE REQUIREMENTS ==========

# 5-Minute Response Rule (NON-NEGOTIABLE)
LEAD_RESPONSE_TIMEOUT_SECONDS=300  # 5 minutes = 10x conversion
LEAD_ANALYSIS_TIMEOUT_MS=500  # <500ms for lead analysis
CMA_GENERATION_TIMEOUT_SECONDS=90  # <90 seconds for CMA

# ========== JORGE'S BUSINESS RULES ==========

# Price Range for Lead Qualification
JORGE_MIN_PRICE=200000
JORGE_MAX_PRICE=800000

# Service Areas (Dallas Metro)
JORGE_SERVICE_AREAS=Dallas,Plano,Frisco,McKinney,Allen

# Preferred Timeline (days)
JORGE_PREFERRED_TIMELINE=60

# Commission Structure
JORGE_STANDARD_COMMISSION=0.06  # 6%
JORGE_MINIMUM_COMMISSION=0.04  # 4%

# ========== ENVIRONMENT ==========

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug Mode
DEBUG=true

# Log Level
LOG_LEVEL=INFO

# ========== MONITORING & ALERTS ==========

# Sentry for Error Tracking (Optional)
SENTRY_DSN=your_sentry_dsn_here

# DataDog API Key (Optional)
DATADOG_API_KEY=your_datadog_api_key_here

# ========== SECURITY ==========

# JWT Secret for API Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========== WEBHOOK CONFIGURATION ==========

# Webhook Secret for GHL Signature Verification
GHL_WEBHOOK_SECRET=your_webhook_secret_here

# Base URL for Webhook Callbacks (Production)
BASE_URL=https://jorge-bots.example.com

# ========== MULTI-TENANT CONFIGURATION (Phase 2) ==========

# Multi-Tenant Mode (false for Phase 1 - Jorge only)
MULTI_TENANT_ENABLED=false

# Tenant ID (Jorge's Location ID)
DEFAULT_TENANT_ID=${GHL_LOCATION_ID}

# ========== TESTING ==========

# Use Mock LLM for Testing
USE_MOCK_LLM=false

# Test Mode (Skip external API calls)
TEST_MODE=false
